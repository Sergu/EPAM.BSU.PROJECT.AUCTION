@using Auction.Models;
@model IEnumerable<LotViewModel>

<div id="searchResult" class="row-fluid">
        @foreach (LotViewModel item in Model)
        {
            <div class="divider col-sm-6">
                <div class="col-sm-5">
                    <h4>@item.Name</h4>
                    <h6>lot №: @item.Id</h6>
                    <h6>@item.BeginDate</h6>
                    <h6>@Html.DisplayFor(modelItem => item.EndDate)</h6>
                </div>
                <div class="col-sm-6">
                    <h6>Prim Cost: @item.PrimaryCost</h6>
                    <h6>Cur Cost: @item.CurrentCost</h6>
                </div>
                <a class="btn btn-default" href="#" role="button">View Details >></a>
            </div>
        }
</div>


