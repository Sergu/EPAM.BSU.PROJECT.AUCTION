@using Auction.Models;
@model LotCreatingViewModel

<div class="jumbotron container center-block row">
    <h4>Lot Creation form</h4>
    @using (Html.BeginForm())
    {
        <fieldset>
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(m => m.Name)
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @style = "max-width:360px;" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
                <div class="form-group center-block">
                    @Html.LabelFor(m => m.PrimaryCost)
                    @Html.TextBoxFor(m => m.PrimaryCost, new { @class = "form-control", @style = "max-width:360px;",@type = "number"})
                    @Html.ValidationMessageFor(model => model.PrimaryCost, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.EndDate)
                    @*@Html.TextBoxFor(m => m.EndDate, new { @class = "form-control" , @style = "max-width:360px;", @text="yyyy.mm.dd hh:mm" })*@
                    @Html.TextBoxFor(m => m.EndDate, new { @class="form-control", @style = "max-width:360px;" })
                    @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
                </div>  
                <div class="form-group">
                    @{
                        SelectList categories = new SelectList(Model.Categories.Select(c => new { Value = c.Id, Text = c.CategoryName }), "Value", "Text");
                    }

                    @Html.LabelFor(m => m.CategoryId)
                    @Html.DropDownListFor(model => model.CategoryId,@categories, new { @class = "form-control" , @style = "max-width:360px;" })
                </div>
                
                      
                <div class="form-group">
                    <input type="submit" class="btn btn-default" value="Create" />
                </div>
            </div>
        </fieldset>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}