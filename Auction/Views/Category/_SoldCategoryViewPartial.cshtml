@using Auction.Models;
@model IEnumerable<CategoryViewModel>

<div>
    <div class="list-group">
        <a href="@Url.Action("SoldIndex", "Lot")" class="list-group-item">All <span class="badge">@Model.Sum(m => m.SoldLotsCount)</span></a>
        @foreach (var cat in Model)
        {          
            <a href="@Url.Action("SoldIndex", "Lot", new { category = cat.Id })" class="list-group-item">@cat.Name <span class="badge">@cat.SoldLotsCount</span></a>
        }
    </div>

