@model Auction.Models.LoginModel


<section id="loginForm">
<h2>Login</h2>
@using (Html.BeginForm("Login","Account")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)  
    <fieldset>
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(m => m.login)
                @Html.TextBoxFor(m => m.login, new { @class = "form-control", @style = "max-width:360px" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @style = "max-width:360px;", @type="password"})
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.RememberMe)
                @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-control", @style = "max-width:60px;" })
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Login" />
            </div>
        </div>
    </fieldset>
    <p>
        @Html.ActionLink("Register", "Register"), if you havn't got account.
    </p>
}
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
