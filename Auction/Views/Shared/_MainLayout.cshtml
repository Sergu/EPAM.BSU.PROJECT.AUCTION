<!DOCTYPE html>

<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/bootstrapcss")
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Auction</a>
            </div>
            <ul class="nav navbar-nav">
                <li><a href="@Url.Action("Home","About")">About us</a></li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">View Lots<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Active lots", "ActiveIndex","Lot")</li>
                        <li>@Html.ActionLink("Sold lots", "SoldIndex", "Lot")</li>
                    </ul>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                @*<li><a href="#"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                <li><a href="#"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>*@
                @Html.Partial("~/Views/Shared/_LoginPart.cshtml")
            </ul>
        </div>
    </nav>

   
    <div class="container">
        @RenderSection("featured", required: false)
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrapjs")
    @RenderSection("Scripts", required: false)
</body>
</html>
